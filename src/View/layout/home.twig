{% extends 'layout.twig' %}

{% block head %}Accueil{% endblock %}
 


{% block content %}

<h1>Les derniers articles</h1>


        {% for post in posts %}

        <div class="post-preview">
          <a href="index.php?page=getPost&amp;id={{post.id}}">
            <h2 class="post-title">
              {{post.title}}
            </h2>
            <p class="post-subtitle">
              {{post.content |slice(0, 150, true) |striptags}}

              {% if session.idUser is defined and session.level == "2" %}
                <a href="index.php?page=selectPost&amp;id={{post.id}}"><img src='img/edit.png'/></a>
                <a href="index.php?page=deletePost&amp;id={{post.id}}"><img src='img/delete.png'/></a>
              {% endif %}
            </p>
          </a>
          <p class="post-meta">Publié par
            {{post.author}}
            le {{post.date_cont|date("m/d/Y", "Europe/Paris")}} à {{post.date_cont|date("H:i:s")}}   
          </p>
        </div>
        <hr>

        {% endfor %}

{% endblock %}

{% block nextpage %}
  <div class="clearfix">
    <a class="btn btn-primary float-right" href="index.php?page=listeArticles">Tous les articles &rarr;</a>
  </div>
{% endblock %}

