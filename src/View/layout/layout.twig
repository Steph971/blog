<!DOCTYPE html>
<html lang="fr">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>{% block head %}{{ block('subtitle') }} - Billet simple pour l'Alaska{% endblock %}</title>

  <!-- Bootstrap core CSS -->
  <link href="node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="node_modules/@fortawesome/fontawesome-free/css/all.css" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic%7cOpen+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet'>

  <!-- Custom styles for this template -->
  <link href="css/clean-blog.min.css" rel="stylesheet">
  <link href="css/assets/style.css" rel="stylesheet">

  

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">

      {% block tiny %}{% endblock %}

        {% if session.idUser is defined %}
          <a class="nav-link" href="index.php?page=home">Bienvenue {{ session.pseudo }}</a>

         {% else %}
          <a class="nav-link" href="index.php?page=home">Bienvenue</a>

        {% endif %}
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">

            {% if session.idUser is defined %}
               <p></p>

            {% else %}
              <a class="nav-link" href="index.php?page=subscribe">Inscription</a>
            {% endif %}

          </li>
          <li class="nav-item">

              {% if session.idUser is defined and session.password is defined and session.level is defined and  session.level == "2"%}
                <a class="nav-link" href="index.php?page=addArticles">Ajouter un Article</a>

              {% elseif session.idUser is defined and session.password is defined and session.level is defined and  session.level == "1"%}
                <a class="nav-link" href="index.php?page=userAccount">Mon compte</a>

              {% else %}

                <a class="nav-link" href="index.php?page=connectUser">Connexion</a>
              {% endif %}

          </li>
          <li class="nav-item">

            {% if session.idUser is defined and session.password is defined and session.level is defined and  session.level == "2"%}
                <a class="nav-link" href="index.php?page=moderation">Admin</a>
            {% endif %}

          </li>
          <li class="nav-item">

              {% if session.idUser is defined %}
                <a class="nav-link" href="index.php?page=deconnexion"><img src="img/exit.png" alt="img" /></a>
            {% endif %}

          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Billet simple pour l'Alaska</h1>
            <span class="subheading">Un roman de Jean Forteroche</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
      {% block content %}
      {% endblock %}

        <!-- Pager -->
        {% block nextpage %}
        {% endblock %}
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <ul class="list-inline text-center">
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
          </ul>
          <p class="copyright text-muted">Copyright &copy; Blog de Jean Forteroche</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="node_modules/jquery/dist/jquery.min.js"></script>
  <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>